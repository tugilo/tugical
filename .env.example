# tugical - LINE連携型予約管理SaaS
# Environment Configuration Template

# Application
APP_NAME="tugical"
APP_ENV=local
APP_KEY=
APP_DEBUG=true
APP_URL=http://localhost

# Database (MariaDB)
DB_CONNECTION=mysql
DB_HOST=database
DB_PORT=3306
DB_DATABASE=tugical_dev
DB_USERNAME=tugical_dev
DB_PASSWORD=dev_password_123
DB_ROOT_PASSWORD=root_password_123

# Redis
REDIS_HOST=redis
REDIS_PASSWORD=redis_password_123
REDIS_PORT=6379
REDIS_DB=0

# Cache
CACHE_DRIVER=redis
CACHE_PREFIX=tugical_dev

# Queue
QUEUE_CONNECTION=redis
QUEUE_PREFIX=tugical_dev

# Session
SESSION_DRIVER=redis
SESSION_LIFETIME=120

# LINE API Configuration
LINE_CHANNEL_ID=
LINE_CHANNEL_SECRET=
LINE_ACCESS_TOKEN=
LINE_LIFF_ID=

# Mail Configuration
MAIL_MAILER=log
MAIL_HOST=smtp.mailtrap.io
MAIL_PORT=2525
MAIL_USERNAME=null
MAIL_PASSWORD=null
MAIL_ENCRYPTION=null
MAIL_FROM_ADDRESS="hello@tugical.com"
MAIL_FROM_NAME="${APP_NAME}"

# Logging
LOG_CHANNEL=stack
LOG_DEPRECATIONS_CHANNEL=null
LOG_LEVEL=debug

# File Storage
FILESYSTEM_DISK=local

# Broadcasting
BROADCAST_DRIVER=log
PUSHER_APP_ID=
PUSHER_APP_KEY=
PUSHER_APP_SECRET=
PUSHER_HOST=
PUSHER_PORT=443
PUSHER_SCHEME=https
PUSHER_APP_CLUSTER=mt1

# Development Tools
TELESCOPE_ENABLED=false
DEBUGBAR_ENABLED=true

# Security
BCRYPT_ROUNDS=10

# Performance
DB_QUERY_LOG=false
QUERY_DEBUG=false

# Multi-Environment Support
# Development:   tugical_dev
# Staging:       tugical_staging  
# Production:    tugical_prod

# phpMyAdmin Access
# URL: http://localhost:8080
# Username: tugical_dev
# Password: dev_password_123
# Database: tugical_dev
